        <div class="app-content">
            <div class="app-content-header">
                <h1 class="app-content-headerText">DASHBOARD - Tài khoản</h1>

            </div>
            
                <div class="d-flex justify-content-end">
                    <a href="/Admin/Home/AddUser">
                        <button type="button" class="btn btn-success"><i class="fas fa-plus mr-2"></i>Thêm tài khoản</button>
                    </a>

                </div>
                <div class="navbar navbar-light bg-light justify-content-between">
                    <div class="col-md-6">     
                            <input class="form-control mr-sm-2" type="search" placeholder="Tìm kiếm ..." aria-label="Search" id="search">

                    </div>
                </div>
            
            <div class="app-content-actions">
                <div class="app-content-actions-wrapper">

                </div>
            </div>
            <div class="products-area-wrapper tableView">






                <div class="">
                    <table class="table table-hover">
                        <thead>
                            <tr>
                                <th scope="col">ID</th>
                                <th scope="col">USERNAME</th>
                                <th scope="col">STATUS</th>
                                <th scope="col">EMPLOYEE</th>
                                <th scope="col">ADMIN</th>
                                <th scope="col">PASSWORD</th>
                                <th scope="col">ACCTION</th>
                            </tr>
                        </thead>
                        <tbody id="result">
                            @{
                                foreach (var item in Model)
                                {
                                    <tr>
                                        <td>@item.ID_USER</td>
                                        <td>@item.USERNAME</td>
                                        <td>@item.STATUS_ACCOUNT</td>
                                        <td>@item.CHECK_EMPLOYEE</td>
                                        <td>@item.CHECK_ADMIN</td>
                                        <td>@item.PASSWORD_USER</td>
                                        <td>
                                            <a href="/Admin/Home/EditUser/@item.ID_USER" class="btn btn-warning"><i class="fas fa-pen mr-2"></i>Edit</a>
                                            <button class="btn btn-danger btn-delete" data-toggle="modal" data-target="#DeleteModal" data-id="@item.ID_USER"><i class="fas fa-trash mr-2"></i> Delete</button>
                                        </td>
                                    </tr>
                                }
                            }


                        </tbody>
                    </table>
                </div>
            </div>
        </div>
